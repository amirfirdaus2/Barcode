<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.theta_edge.barcode.UserDetails"
    android:background="@drawable/bg7">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nama staf :"
        android:id="@+id/textView13"
        android:textColor="@color/red"
        android:layout_below="@+id/textClock3"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView_staffName"
        android:hint="staff name"
        android:textColor="#030000"
        android:textStyle="normal"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sila pilih Jabatan dan PTJ yang diperiksa"
        android:id="@+id/textView15"
        android:textColor="@color/blue"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/jabatan"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/textView15"
        android:layout_alignParentRight="true" />



    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ptj"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/jabatan"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Imbas"
        android:id="@+id/button_imbas"
        android:onClick="kePengimbas"
        android:layout_below="@+id/ptj"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonshape"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Jabatan :"
        android:id="@+id/textView3"
        android:textColor="@color/red"
        android:layout_below="@+id/textView_staffName"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView_jabatan"
        android:hint="dept"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PTJ :"
        android:id="@+id/textView5"
        android:textColor="@color/red"
        android:layout_below="@+id/textView_jabatan"
        android:layout_alignParentStart="true" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock3"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button_imbas" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView_ptj"
        android:hint="respond"
        android:textColor="@color/black"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true" />



</RelativeLayout>
